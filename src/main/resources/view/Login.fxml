                  <Button fx:id="si_loginBtn" layoutX="119.0" layoutY="348.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="173.0" styleClass="other-form" stylesheets="@design.css" text="Login" />
               </children>
            </AnchorPane>
         </right>
      </BorderPane>

      <!-- Sign-up Form (Initially Hidden) -->
      <BorderPane fx:id="signup_form" layoutX="9.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" visible="false">
