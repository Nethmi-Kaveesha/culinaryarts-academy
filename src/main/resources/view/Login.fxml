<AnchorPane prefHeight="594.0" prefWidth="814.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.LoginFormController">
   <children>
      <BorderPane fx:id="login_form" prefHeight="594.0" prefWidth="825.0">
         <left>
            <AnchorPane prefHeight="558.0" prefWidth="426.0" styleClass="other-form" stylesheets="@design.css" BorderPane.alignment="TOP_LEFT">
               <children>
                  <Label layoutX="102.0" layoutY="211.0" text="The Culinary Academy" textFill="WHITE">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <Label layoutX="179.0" layoutY="432.0" text="Register Account" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <!-- Create Account Button -->
                  <Button fx:id="si_createAccountBtn" layoutX="96.0" layoutY="465.0" mnemonicParsing="false" onAction="#handleCreateAccount" prefHeight="38.0" prefWidth="268.0" styleClass="create-btn" stylesheets="@design.css" text="Create Account" />
               </children>
            </AnchorPane>
         </left>
         <right>
            <AnchorPane prefHeight="594.0" prefWidth="390.0" BorderPane.alignment="TOP_RIGHT">
               <children>
                  <Label layoutX="133.0" layoutY="106.0" styleClass="white-form" stylesheets="@design.css" text="Login User Form" textFill="#5a3375">
