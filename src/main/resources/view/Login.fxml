            <AnchorPane prefHeight="594.0" prefWidth="425.0" styleClass="other-form" stylesheets="@design.css" BorderPane.alignment="TOP_LEFT">
               <children>
                  <Label layoutX="102.0" layoutY="211.0" text="The Culinary Academy" textFill="WHITE">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <Label layoutX="152.0" layoutY="433.0" text="Already Have an Account" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <!-- Login Button in Signup Form -->
                  <Button fx:id="su_loginAccountBtn" layoutX="96.0" layoutY="465.0" mnemonicParsing="false" onAction="#handleLoginAccount" prefHeight="38.0" prefWidth="268.0" styleClass="create-btn" stylesheets="@design.css" text="Login Account" />
               </children>
            </AnchorPane>
         </left>
         <right>
            <AnchorPane prefHeight="594.0" prefWidth="390.0" BorderPane.alignment="TOP_RIGHT">
               <children>
                  <Label layoutX="133.0" layoutY="106.0" styleClass="white-form" stylesheets="@design.css" text="REGISTER USER FORM" textFill="#5a3375">
