<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="684.0" prefWidth="1550.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Header Section -->
    <HBox alignment="CENTER" prefHeight="150.0" prefWidth="1550.0" style="-fx-background-color: #1e5fb8; -fx-padding: 20;">
        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;" text="Welcome to the Dashboard" />
    </HBox>

    <!-- Main Content -->
    <VBox layoutX="202.0" layoutY="150.0" spacing="30" style="-fx-padding: 20;">

        <!-- Stats Section -->
        <HBox alignment="CENTER" spacing="20">

            <!-- Card 1 -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-width: 350; -fx-min-height: 150;" styleClass="btn" stylesheets="@crudDesign.css">
                <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="Total Students" />
                <Label style="-fx-font-size: 40; -fx-font-weight: bold; -fx-text-fill: white;" text="2,500" />
            </VBox>

            <!-- Card 2 -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-width: 350; -fx-min-height: 150;" styleClass="btn" stylesheets="@crudDesign.css">
                <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="Programs Offered" />
                <Label style="-fx-font-size: 40; -fx-font-weight: bold; -fx-text-fill: white;" text="6" />
            </VBox>

            <!-- Card 3 -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-width: 350; -fx-min-height: 150;" styleClass="btn" stylesheets="@crudDesign.css">
                <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="Active Users" />
                <Label style="-fx-font-size: 40; -fx-font-weight: bold; -fx-text-fill: white;" text="120" />
            </VBox>
        </HBox>

        <!-- Activity Chart -->
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-height: 300;" styleClass="border" stylesheets="@crudDesign.css">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Activity Overview" />
            <Label style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;" text="(Add a chart or graph here)" />
        </VBox>
    </VBox>
</AnchorPane>
